@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Elevation="1">
        <MudButton StartIcon="@Icons.Material.Filled.Menu"
                   Color="Color.Inherit"
                   Size="Size.Large"
                   OnClick="@(() => DrawerToggle())">
            Quick Inventory
        </MudButton>

        <MudSpacer />

        <LoginDisplay />
        <MudButton StartIcon="@Icons.Material.Filled.MoreVert"
                   Color="Color.Inherit">
        </MudButton>
    </MudAppBar>

    <MudDrawer @bind-Open="@DrawerOpen"
               ClipMode="DrawerClipMode.Always"
               Color="Color.Inherit"
               Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudGrid Justify="Justify.Center" Class="my-3">
            <MudItem xs="10">
                @Body

                <div id="blazor-error-ui">
                    An unhandled error has occurred.
                    <a href="" class="reload">Reload</a>
                    <a class="dismiss">🗙</a>
                </div>
            </MudItem>
        </MudGrid>
    </MudMainContent>
</MudLayout>

@code {
    private bool DrawerOpen { get; set; } = true;

    private void DrawerToggle()
    {
        DrawerOpen = !DrawerOpen;
    }
}
