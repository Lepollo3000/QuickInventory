@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>
        <a href="authentication/profile">Hola, @context.User.Identity?.Name!</a>
        <form action="Account/Logout" method="post">
            <AntiforgeryToken />
            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
            <button type="submit" class="nav-link">
                <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
            </button>
        </form>
    </Authorized>

    <NotAuthorized>
        <button class="nav-link btn btn-link" @onclick="BeginLogIn">Iniciar sesión</button>
    </NotAuthorized>
</AuthorizeView>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    public void BeginLogOut()
    {
        NavigationManager.NavigateTo($"account/logout?returnUrl={Uri.EscapeDataString(NavigationManager.Uri)}");
    }

    public void BeginLogIn()
    {
        NavigationManager.NavigateTo($"account/login?returnUrl={Uri.EscapeDataString(NavigationManager.Uri)}");
    }
}
