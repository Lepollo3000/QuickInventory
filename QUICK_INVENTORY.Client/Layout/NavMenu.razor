                <MudNavLink Href="@ApplicationPages.Productos.Movimientos.Salidas"
                            Match="NavLinkMatch.All">
                    Salidas
                </MudNavLink>
            </MudNavGroup>

            <MudNavGroup Title="Productos" Expanded="true">
                <MudNavLink Href="@ApplicationPages.Productos.Crear"
                            Match="NavLinkMatch.All">
