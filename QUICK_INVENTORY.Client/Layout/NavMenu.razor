            <MudNavGroup Title="Movimientos" Expanded="true">
                <MudNavLink Href="@ApplicationPages.Home"
                            Match="NavLinkMatch.All">
                    Alta de Entradas y Salidas
                </MudNavLink>

                <MudNavLink Href="@ApplicationPages.Productos.Movimientos.Entradas"
                            Match="NavLinkMatch.All">
                    Entradas
