@using Microsoft.AspNetCore.Authorization

<PageTitle>Registro de Entradas/Salidas</PageTitle>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-4">
        <h1 class="h3 text-center"><b>Registro de Entradas/Salidas</b></h1>

        <EditForm Model="model" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />

            <div class="form-group mb-3">
                <label for="productoId">Producto afectado:</label>
                <InputNumber class="form-control" @bind-Value="model.ProductoId" />
                <ValidationMessage class="mb-3" For="@(() => model.ProductoId)" />
            </div>

            <div class="form-group mb-3">
                <label for="productoId">Cantidad implicada:</label>
                <InputNumber class="form-control" @bind-Value="model.Cantidad" />
                <ValidationMessage class="mb-3" For="@(() => model.Cantidad)" />
            </div>

            <div class="form-group mb-3">
                <label for="productoId">Tipo de registro</label>
                <InputSelect class="form-select" @bind-Value="model.RegistroTipo">
                    @foreach (EnumRegistroTipo registroTipo in Enum.GetValues(typeof(EnumRegistroTipo)))
                    {
                        <option value="@registroTipo">@registroTipo.ToString()</option>
                    }
                </InputSelect>
                <ValidationMessage class="mb-3" For="@(() => model.RegistroTipo)" />
            </div>
            <div class="form-group mb-3">
                <button class="btn btn-success d-block">Enviar</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    RegistroDto model = new();

    private void HandleSubmit()
    {

    }
}
